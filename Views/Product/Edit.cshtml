@model Product

<h2> Edit Product</h2>
<form asp-action="Edit">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mt-4">
        <label asp-for="ProductId" class="form-label"></label>
        <input asp-for="ProductId" class="form-control" hidden />
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <label asp-for="ImagePath" class="form-label"></label>
        <input asp-for="ImagePath" class="form-control" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <label asp-for="Category" class="form-label"></label>
        <select asp-items="ViewBag._Categories" asp-for="CategoryId" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group my-5">
        <input type="submit" value="Edit Product" class="btn btn-success" />
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>

</form>
