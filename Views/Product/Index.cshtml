@model IEnumerable<Product>

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">ProductId</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Quantity</th>
            <th scope="col">ImagePath</th>
            <th scope="col">CategoryName</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>@item.Quantity</td>
                <td>@item.ImagePath</td>
                <td>@item.Category!.Name</td>

                <td>
                    <a asp-controller="Product" asp-action="ViewDetails" asp-route-id="@item.ProductId" class="btn btn-primary mx-2">View</a>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning mx-2">Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger mx-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Product/Create" class="btn btn-success m-3">Add Product</a>
    </tfoot>
</table>
